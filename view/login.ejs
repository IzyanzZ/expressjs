<div class="mt-3">
    <form action="/login" method="post">
        <div class="mb-3">
            <label class="form-label text-center">Username</label>
            <input type="text" name="username" placeholder="Username" class="form-control w-50">
        </div>
        <div class="mb-3">
            <label class="form-label text-center">Password</label>
            <input type="password" name="password" placeholder="Password" class="form-control w-50">
        </div>
        <div class="mb-3">
            <input type="submit" class="btn btn-outline-primary w-25">
        </div>
        <hr>
        <p>Tidak punya akun? <a href="/register">Register</a></p>
    </form>
</div>